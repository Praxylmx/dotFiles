#!/bin/sh
# script which sets root window name(ie. prints to dwm status bar)

dwm_date () {
    printf "ï€— %s" "$(date "+%I:%M")"
}

#dwm_battery() {
#    printf "%s"  "$(cat /sys/class/power_supply/BAT1/capacity)"
#}

dwm_date
#dwm_battery

while true
do
    xsetroot -name "[$(dwm_date)]"
    sleep 15
done
